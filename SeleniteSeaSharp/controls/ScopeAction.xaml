<UserControl x:Class="SeleniteSeaSharp_Editor.controls.ScopeAction"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SeleniteSeaSharp_Editor.controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Margin="12,0,0,3">
    <Border BorderThickness="3,0,0,0" BorderBrush="Yellow" x:Name="PrimaryBorder" x:FieldModifier="private">
        <DockPanel>
            <Label x:Name="ActionTitle" Content="Test Title" Foreground="Yellow" FontWeight="Bold" FontSize="12" DockPanel.Dock="Top"/>
            <StackPanel DockPanel.Dock="Bottom" x:Name="ScopeActionsContainer" HorizontalAlignment="Left">
                <local:ScopeAddButton/>
            </StackPanel>
        </DockPanel>
    </Border>
</UserControl>
