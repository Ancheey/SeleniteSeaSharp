<local:DisplayAction x:Class="SeleniteSeaSharp_Editor.controls.ScopeAction"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SeleniteSeaSharp_Editor.controls"
             mc:Ignorable="d"
             Background="#02FFFF00"
             d:DesignHeight="450" d:DesignWidth="800" Margin="20,7,0,7">
    <Border BorderThickness="3,0,0,1" >
        <Border.BorderBrush>
            <LinearGradientBrush EndPoint="0.5,0.5" StartPoint="0,0.5">
                <GradientStop Color="Yellow" x:Name="PrimaryBorder" x:FieldModifier="private"/>
                <GradientStop Color="Transparent" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        <DockPanel>
            <Label x:Name="ActionTitle" Content="Test Title" Foreground="Yellow" FontWeight="Bold" FontSize="12" DockPanel.Dock="Top"/>
            <StackPanel DockPanel.Dock="Bottom" x:Name="ScopeActionsContainer" HorizontalAlignment="Stretch" Margin="0,0,0,8">
            </StackPanel>
        </DockPanel>
    </Border>
</local:DisplayAction>
